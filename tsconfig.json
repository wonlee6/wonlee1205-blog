{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "skipLibCheck": true,

    "isolatedModules": true,
    "noEmit": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,

    "allowJs": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "useDefineForClassFields": true,
    "resolveJsonModule": true,
    "incremental": true,
    
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./public/**/*.ts"
  ]
}
